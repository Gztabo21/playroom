<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">

            <xpath expr="//page[last()]" position="after">
                <page string="Preventa">
                    <group col="4">
                        <!-- <field name="brand_ids" nolabel="1" /> -->
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="base_view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product_visibility_website.base_view_partner_form_inherit" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='filter_mode']" position="attributes">
                <attribute name="options">{'horizontal': true}</attribute>
            </xpath>

            <xpath expr="//field[@name='website_available_cat_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('filter_mode', 'not in', ['categ_only'])]}</attribute>
            </xpath>

            <xpath expr="//field[@name='website_available_product_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('filter_mode', 'not in', ['product_only'])]}</attribute>
            </xpath>

            <xpath expr="//field[@name='website_available_product_ids']" position="after">
                <field name="website_available_brand_ids" widget="many2many_tags" attrs="{'invisible': [('filter_mode', 'not in', ['brand_only'])]}" />
            </xpath>

        </field>
    </record>


</odoo>