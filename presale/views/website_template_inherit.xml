<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <template id="o_website_sale_cart_rightfit_inherit" inherit_id="website_save_cart.o_website_sale_cart_rightfit">

        <xpath expr="//div[hasclass('oe_cart')]/div[@class='row']/div[@class='col-lg-12 mb16']//a[1]" position="attributes">
            <attribute name="class">btn btn-primary mr8</attribute>
            <attribute name="href">/shop/cart</attribute>
        </xpath>

        <xpath expr="//div[hasclass('oe_cart')]/div[@class='row']/div[@class='col-lg-12 mb16']//a[2]" position="attributes">
            <attribute name="class">btn btn-primary pull-right mr8</attribute>
        </xpath>

    </template>


    <!-- Customer -->
    <template id="wt_product_seller.wt_products" inherit_id="website_sale.products" name="Products">
        <xpath expr="//*[@id='wrap']/div[2]/div[1]" position="after">
            <div class="products_pager form-inline flex-md-nowrap justify-content-between justify-content-md-center">

                <t t-if="request.env.user.is_seller == True">

                    <t t-set="parent_id" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.id" />

                    <label for="customer">
                        <strong>Cliente: </strong>
                    </label>
                    <select id="customer" name="customer" class="form-control input-group  mt-2 mr-2">
                        <option value="">Customer</option>
                        <t t-foreach="request.env['res.partner'].sudo().search([])" t-as="c">
                            <option t-att-value="c.id" t-att-selected="c.id == parent_id if parent_id else customer">
                                <t t-esc="c.name" />
                            </option>
                        </t>
                    </select>

                    <input id="is_seller_customer" readonly="readonly" type="hidden" value="True" />
                    <t t-set="_classes" t-valuef="w-100 w-md-auto mt-2" />
                </t>

            </div>

        </xpath>
    </template>

    <template id="portal_my_save_cart" inherit_id="website_save_cart.portal_my_save_cart">
        <xpath expr="//t[3]" position="after">
            <button class="btn btn-primary sweet-click-union-cart" data-toggle="modal" t-attf-data-target="#save_cart_rename_btn#{1}" t-att-save_cart_ids='save_carts'>
                Unir
                <i class="fa fa-link" />
            </button>
        </xpath>
    </template>

</odoo>