<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="attendance_presale_view_form" model="ir.ui.view">
		<field name="name">attendance.presale.form</field>
		<field name="model">attendance.presale</field>
		<field name="arch" type="xml">
			<form string="Asistencia Preventa">


				<group>
					<div class="col-xs-12">
						<div class="panel panel-default">

							<div class="panel-heading">
								<h3 class="panel-title">Registro de Asistencia</h3>
							</div>

							<div class="panel-body">

								<group col="4">
									<field name="partner_id" readonly="1" />
									<field name="date" readonly="1" />
								</group>

							</div>

						</div>
					</div>
				</group>

			</form>
		</field>
	</record>


	<record id="attendance_presale_view_tree" model="ir.ui.view">
		<field name="name">attendance.presale.tree</field>
		<field name="model">attendance.presale</field>
		<field name="arch" type="xml">
			<tree string="Asistencia Preventa">
				<field name="partner_id" />
				<field name="date" />
			</tree>
		</field>
	</record>


	<record model="ir.ui.view" id="attendance_presale_view_kanban">
		<field name="name">attendance.presale.kanban</field>
		<field name="model">attendance.presale</field>
		<field name="priority">10</field>
		<field name="arch" type="xml">

			<kanban class="o_res_partner_kanban">
				<field name="id" />
				<field name="partner_id" />
				<field name="date" />

				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">

							<div class="oe_kanban_details">
								<h5>
									<field name="partner_id" />
								</h5>

								<ul class="list-unstyled">
									<li t-if="record.date">
										Fecha Asistencia:
										<field name="date" />
									</li>
								</ul>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>


	<record id="attendance_presale_search_view" model="ir.ui.view">
		<field name="name">Register Attendence Search</field>
		<field name="model">attendance.presale</field>
		<field name="arch" type="xml">

			<search string="Search Appointment">
				<field name="partner_id" />

				<group expand="0" name="group_by" string="Group By">
					<filter name="partner" string="Contacto" domain="[]" context="{'group_by' : 'partner_id'}" />
				</group>

			</search>
		</field>
	</record>


	<record id="attendance_presale_form_action" model="ir.actions.act_window">
		<field name="name">Asistencia Preventa</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">attendance.presale</field>
		<field name="view_mode">kanban,tree,form</field>
		<field name="search_view_id" ref="attendance_presale_search_view" />
		<field name="context"></field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Registro de Asistencia de la Preventa
			  </p>
		</field>
	</record>


</odoo>