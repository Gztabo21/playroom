<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_stock_backorder" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.stock.inherit_id</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="10"/>
    <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@data-key='stock']" position="inside">
        <h2>Backorder Configuraci√≥n</h2>
        <div class="row mt16 o_settings_container">
          <div class="col-12 col-lg-6 o_setting_box">
             <div class="o_setting_left_pane">
              <field name="automatic_backorder"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="automatic_backorder" string="Backorder Automatico"/>
            </div>
         
          </div>
        </div>

      </xpath>
 
    </field>
  </record>
</odoo>