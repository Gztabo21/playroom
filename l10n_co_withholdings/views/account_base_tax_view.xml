<odoo>

    <record id="account_base_tax_form_view" model="ir.ui.view">
        <field name="name">account.base.tax.form</field>
        <field name="model">account.base.tax</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4" string="Rango de Fechas">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group col="4">
                        <field name="type_tax"/>
                        <field name="amount"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_base_tax_tree_view" model="ir.ui.view">
        <field name="name">account.base.tax.tree</field>
        <field name="model">account.base.tax</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="type_tax"/>
                <field name="amount"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

</odoo>