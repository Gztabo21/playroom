<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record model='ir.ui.view' id='views_save_cart_tree'>
      <field name='name'>view.save.cart.tree</field>
      <field name='model'>save.cart</field>
      <field name='arch' type='xml'>
        <tree string='Saved Carts'>
          <field name="name" />
          <field name="partner_id" />
          <field name="date_order" />
          <field name="company_id" />
          <field name="sale_order_id" />
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="view_save_cart_form">
      <field name="name">view.save.cart.form</field>
      <field name="model">save.cart</field>
      <field name="arch" type="xml">
        <form string="Saved Carts">
          <sheet>
            <h1>
              <field name="name" />
            </h1>
            <group>
              <group>
                <field name="partner_id" />
                <field name="date_order" />
              </group>
              <group>
                <field name="company_id" />
                <field name="sale_order_id" />
              </group>
            </group>
            <notebook>
              <page string="Product Line">
                <group>
                  <field name="cart_lines" nolabel="1">
                    <tree editable="bottom" string="Product Lines">
                      <field name="product_id" />
                      <field name="product_uom_qty" />
                      <field name="price_unit" />
                      <field name="price_subtotal" />
                    </tree>
                  </field>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record id="saved_carts_action_website" model="ir.actions.act_window">
      <field name="name">Saved Carts</field>
      <field name="res_model">save.cart</field>
      <field name="view_mode">tree,form</field>
      <field name="help">You don't have any unpaid order from the website.</field>
    </record>
    <menuitem id="menu_carts_sub" name="Carts" parent="website.menu_website_configuration" sequence="3" groups="sales_team.group_sale_salesman" />
    <menuitem id="menu_saved_carts" name="Saved Carts" action="saved_carts_action_website" parent="menu_carts_sub" sequence="1" />
  </data>
</odoo>