<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="website_quick_quotation.quick_quotation_error" model="website.page">
        <field name="name">Thanks (Quick Quotation)</field>
        <field name="type">qweb</field>
        <field name="url">/quick-quotation-error</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">website_quick_quotation.quick_quotation_error</field>
        <field name="arch" type="xml">
            <t name="Thanks (Quick Quotation)" t-name="website_quick_quotation.quick_quotation_error">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                            <div class="container s_allow_columns">
                                <div class="row">
                                    <div class="col-lg-12 col-xl-12 mr-lg-auto">
                                        <span class="d-block fa fa-4x fa-thumbs-down mx-auto rounded-circle bg-danger"/>
                                        <br/>
                                        <h1 class="text-center">Thank You!</h1>
                                        <div class="pb16 pt16 s_hr" data-snippet="s_hr" data-name="Separator">
                                            <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                        </div>
                                        <h5 class="text-center">
                                            <span class="fa fa-check-circle"/>
                                            <span>Your quotation was not sent <b>successfully</b>
                                            </span>
                                        </h5>
                                        <p class="text-center">Something went wrong, Please contact administrator.</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="website_quick_quotation.quick_quotation_thanks" model="website.page">
        <field name="name">Thanks (Quick Quotation)</field>
        <field name="type">qweb</field>
        <field name="url">/quick-quotation-thank-you</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">website_quick_quotation.quick_quotation_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks (Quick Quotation)" t-name="website_quick_quotation.quick_quotation_thanks">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                            <div class="container s_allow_columns">
                                <div class="row">
                                    <div class="col-lg-12 col-xl-12 mr-lg-auto">
                                        <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary"/>
                                        <br/>
                                        <h1 class="text-center">Thank You!</h1>
                                        <div class="pb16 pt16 s_hr" data-snippet="s_hr" data-name="Separator">
                                            <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                        </div>
                                        <h5 class="text-center">
                                            <span class="fa fa-check-circle"/>
                                            <span>Your quotation has been sent <b>successfully</b>
                                            </span>
                                        </h5>
                                        <p class="text-center">We will get back to you shortly.</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <template id="website_quick_quotation.quick_quotation" name="Quick Quotation">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <h1>Quick Quotation</h1>
                    </div>
                </section>
                <section class="s_text_block pt40 pb40 o_quick_quotation " data-snippet="s_text_block">
                    <t t-set="logged_partner" t-value="request.env['website.visitor']._get_visitor_from_request().partner_id"/>
                    <div class="container s_allow_columns">
                        <div class="row">
                            <div class="col-lg-12 mt-4 mt-lg-0">
                                <section class="pt8 pb8">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label class="font-weight-bold" for="name">Your Name</label>
                                                    <input id="name" name="name" class="form-control mb-2 input_name" autocomplete="off" required="required" t-att-value="logged_partner.name"/>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label class="font-weight-bold" for="email">Your Email</label>
                                                    <input id="email" name="email" class="form-control mb-2 input_email" autocomplete="off" required="required" t-att-value="logged_partner.email"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                                <section class="pt8 pb8">
                                    <div class="container">
                                        <div class="table-responsive" style="overflow: visible;">
                                            <div class="table-wrapper">
                                                <div class="table-title">
                                                    <div class="row">
                                                        <div class="col-sm-4">
                                                            <h2>Add <b>Products</b>
                                                            </h2>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control search_prodcuts" placeholder="Search prodcuts"/>
                                                                <div class="input-group-append">
                                                                    <button class="btn btn-primary" type="button">
                                                                        <i class="fa fa-search"></i>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                                <button type="button" class="btn btn-primary add-new">
                                                                    <i class="fa fa-plus"></i> Add New
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <table class="table table-bordered table_quick_quotation" id="table_quick_quotation">
                                                        <thead>
                                                            <tr>
                                                                <th>Sr.No</th>
                                                                <th>Product</th>
                                                                <th>Unit</th>
                                                                <th>Quantity</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                        </tbody>
                                                    </table>
                                                    <div class="row">
                                                        <div class="col-sm-8">
                                                        </div>
                                                        <div class="col-sm-4" style="text-align:right">
                                                            <button type="button" class="btn btn-primary submit">
                                                                <i class="fa fa-sign-in"></i> Submit
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>

        <data noupdate="0">
            <record id="page_quick_quotation" model="website.page">
                <field name="url">/quick_quotation</field>
                <field name="is_published">True</field>
                <field name="view_id" ref="website_quick_quotation.quick_quotation"/>
                <field name="cache_time">0</field>
                <field name="track">True</field>
            </record>

            <record id="menu_quick_quotation" model="website.menu">
                <field name="name">Quick Quotation</field>
                <field name="url">/quick_quotation</field>
                <field name="page_id" ref="website_quick_quotation.page_quick_quotation"/>
                <field name="parent_id" ref="website.main_menu"/>
                <field name="sequence" type="int">60</field>
            </record>
        </data>
    </odoo>
