<odoo>
    <data>

        <record id="purchase_order_view_inherit" model="ir.ui.view">
            <field name="name">purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_rfq_send']" position="after">
                    <button name="action_multi_product" string="Productos" type="object" attrs="{'invisible': [('state', 'not in', ['draft'])]}" class="oe_highlight"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
