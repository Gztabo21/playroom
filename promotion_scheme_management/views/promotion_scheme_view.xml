<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="promotion_scheme_form_view" model="ir.ui.view">
            <field name="name">promotion_scheme.form</field>
            <field name="model">promotion.scheme</field>
            <field name="arch" type="xml">
                <form string="Promotion Scheme">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"
                                       placeholder="Scheme Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="applicable_on" widget="radio" required="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_id" attrs="{'invisible': [('applicable_on', '=', 'product_category')], 'required': [('applicable_on', '=', 'product')]}"/>
                                <field name="product_category_id" attrs="{'invisible': [('applicable_on', '=', 'product')], 'required': [('applicable_on', '=', 'product_category')]}"/>
                            </group>
                            <group>
                                <field name="product_qty" required="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date" attrs="{'required': [('start_date', '!=', False)]}"/>
                            </group>
                        </group>
                        <group string="Rewards">
                            <field name="promotion_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="reward_product_id" required="1"/>
                                    <field name="reward_product_qty" required="1"/>
                                    <field name="reward_product_uom_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="reward_product_id" required="1"/>
                                    </group>
                                    <group>
                                        <field name="reward_product_qty" required="1"/>
                                        <field name="reward_product_uom_id"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="promotion_scheme_tree_view" model="ir.ui.view">
            <field name="name">promotion_scheme.tree</field>
            <field name="model">promotion.scheme</field>
            <field name="arch" type="xml">
                <tree string="Promotion Scheme">
                    <field name="name"/>
                    <field name="applicable_on"/>
                </tree>
            </field>
        </record>

        <record id="promotion_scheme_search_view" model="ir.ui.view">
            <field name="name">promotion_scheme.search</field>
            <field name="model">promotion.scheme</field>
            <field name="arch" type="xml">
                <search string="Promotion Scheme">
                    <field name="name"/>
                    <group expand="1" string="Group By">
                        <filter string="Applicable On" name="applicable_on"
                                domain="[]"
                                context="{'group_by':'applicable_on'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="promotion_scheme_act_window" model="ir.actions.act_window">
            <field name="name">Scheme</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">promotion.scheme</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Promotion and Scheme" id="menu_root_scheme" parent="sale.sale_menu_root" sequence="5"/>
        <menuitem name="Promotion Scheme" id="promotion_scheme_menu" parent="menu_root_scheme"
                  action="promotion_scheme_act_window"/>

    </data>
</odoo>