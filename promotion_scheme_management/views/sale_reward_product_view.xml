<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_reward_products_form_view" model="ir.ui.view">
            <field name="name">sale.order.reward.products.form</field>
            <field name="model">sale.order.reward.products</field>
            <field name="arch" type="xml">
                <form string="Sale Reward Products">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom_id"/>
                            </group>
                            <group>
                                <field name="reward_qty"/>
                                <field name="sale_order_id" invisible="1"/>
                                <field name="sale_line_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_order_reward_products_tree_view" model="ir.ui.view">
            <field name="name">sale.order.reward.products.tree</field>
            <field name="model">sale.order.reward.products</field>
            <field name="arch" type="xml">
                <tree string="Sale Reward Products">
                    <field name="product_id"/>
                    <field name="product_uom_id"/>
                    <field name="reward_qty"/>
                </tree>
            </field>
        </record>

        <record id="sale_order_reward_products_act_window" model="ir.actions.act_window">
            <field name="name">Sale Order Reward Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.reward.products</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>