<odoo>
    <record id="kw_full_name_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.custom(kw_full_name)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="kw_is_partner_fullname" invisible="1"/>
            </field>
            <field name="company_type" position="after">
                <group class="oe_edit_only" attrs="{'invisible':[('kw_is_partner_fullname', '=', False)]}">
                    <field name="kw_partner_first_name"/>
                    <field name="kw_partner_middle_name"/>
                    <field name="kw_partner_last_name"/>
                </group>
            </field>
            <field name="name" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('kw_is_partner_fullname','=',True)]}
                </attribute>
            </field>
            <field name="name" position="after">
                <field class="oe_read_only" name="kw_computed_name" attrs="{'invisible':[('kw_is_partner_fullname','=',False)]}"/>
            </field>
        </field>
    </record>
</odoo>
